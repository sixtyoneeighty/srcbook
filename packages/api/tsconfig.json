{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ES2022"],
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "outDir": "dist",
    "types": ["vitest/globals", "vite/client", "node"]
  },
  "include": ["**/*.mts"],
  "exclude": ["node_modules", "dist"]
}
